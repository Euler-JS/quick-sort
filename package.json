{
  "name": "QuickSort.js",
  "version": "1.0.0",
  "description": "A JavaScript QuickSort implementation",
  "main": "src/QuickSort.js",
  "scripts": {
    "start": "npm run -s babel",
    "test": "npm run -s babel && npm run -s babel-tests && jasmine-node dist/",
    "babel": "babel -q src -d dist",
    "babel-tests": "babel -q tests -d dist",
    "build-visual": "npm run babel && cp src/visual/index.html dist-visual/index.html && node node_modules/webpack/bin/webpack.js --optimize-minimize src/visual/webpack.js dist-visual/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ffflorian/QuickSort.js.git"
  },
  "author": "@ffflorian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ffflorian/QuickSort.js/issues"
  },
  "homepage": "https://github.com/ffflorian/QuickSort.js#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "jasmine-node": "^1.14.5",
    "webpack": "^1.13.3"
  },
  "babel": {
    "presets": ["es2015"],
    "ignore": [
        "src/visual"
    ]
  }
}
